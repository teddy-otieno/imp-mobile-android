<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.imp.impandroidclient">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />

    <application
        android:name=".application.GlobalApplication"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:networkSecurityConfig="@xml/network_security_config"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <service
            android:name=".service.NetworkService"
            android:enabled="true"
            android:exported="true"></service>

        <activity android:name=".messaging.ConversationActivity" />
        <activity android:name=".messaging.ConversationsList" />
        <activity android:name=".submission_types.PostSubmissionView" />
        <activity android:name=".submission_types.PostSubmissionDetails" />
        <activity
            android:name=".submission_types.ChooseMedia"
            android:label="@string/title_activity_choose_media" />
        <activity android:name=".media.ImageSelector" />
        <activity android:name=".media.MediaGallery" />
        <activity android:name=".submission_types.post.Post" />
        <activity android:name=".submission_types.carousel.Carousel" />
        <activity
            android:name=".campaign.CampaignActivity"
            android:label="@string/title_activity_campaign"
            android:theme="@style/AppTheme" />
        <activity
            android:name=".main_screen.MainDashboard"
            android:label="@string/title_activity_main_dashboard"
            android:parentActivityName=".start_up.LoadingPage">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.imp.impandroidclient.start_up.LoadingPage" />
        </activity>
        <activity android:name=".start_up.LoginActivity" />
        <activity android:name=".start_up.LoadingPage">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".start_up.signup.SignUp"
            android:parentActivityName=".start_up.LoginActivity">
            <intent-filter>
                <action android:name="android.intent.action.VIEW" />
            </intent-filter>
        </activity>
    </application>

</manifest>