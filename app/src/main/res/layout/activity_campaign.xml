<?xml version="1.0" encoding="utf-8"?>


<androidx.coordinatorlayout.widget.CoordinatorLayout

    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/backgroundColor"
        android:fillViewport="true"
        app:layout_constraintTop_toTopOf="parent"
        android:paddingBottom="32dp"
        tools:context=".campaign.CampaignActivity">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="4dp">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/main_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toTopOf="parent"
                tools:layout_editor_absoluteX="4dp">

                <ImageView
                    android:id="@+id/detailed_campaignCoverImage"
                    android:layout_width="match_parent"
                    android:layout_height="261dp"
                    android:adjustViewBounds="true"
                    android:scaleType="centerCrop"
                    android:transitionName="campaignCoverImage"
                    app:layout_constraintTop_toTopOf="parent"
                    tools:srcCompat="@tools:sample/backgrounds/scenic" />

                <ImageView
                    android:id="@+id/brandOfCampaign"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:layout_marginTop="180dp"
                    android:adjustViewBounds="true"
                    android:background="@drawable/avatar_background"
                    android:cropToPadding="true"
                    android:elevation="2dp"
                    android:scaleType="centerCrop"

                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.498"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="@+id/detailed_campaignCoverImage"
                    tools:srcCompat="@tools:sample/avatars" />

                <TextView
                    android:id="@+id/detail_campaignTitle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="28dp"
                    android:textColor="@color/colorPrimary"
                    android:textStyle="bold"
                    android:transitionName="campaignTitleTransition"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.5"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/brandOfCampaign" />

                <TextView
                    android:id="@+id/detailed_campaignDescription"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="32dp"
                    android:layout_marginTop="16dp"
                    android:layout_marginEnd="32dp"
                    android:text="TextView"
                    android:transitionName="campaignDescriptionTransition"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.5"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/detail_campaignTitle" />

            </androidx.constraintlayout.widget.ConstraintLayout>

            <include layout="@layout/layout_campaign_info_details"/>

            </androidx.constraintlayout.widget.ConstraintLayout>
        </androidx.core.widget.NestedScrollView>
    <include layout="@layout/layout_choose_submission"/>
</androidx.coordinatorlayout.widget.CoordinatorLayout>
