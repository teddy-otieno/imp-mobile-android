<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:layout_constraintTop_toBottomOf="@id/main_title"
    android:layout_marginBottom="64dp"
    android:orientation="vertical">

    <View android:layout_width="match_parent" android:layout_height="1dp" style="@style/Divider"/>

    <LinearLayout
        android:id="@+id/about_us"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:elevation="0dp"
        android:orientation="vertical"

        >

        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/header_about_us"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="16dp"
            android:text="@string/header_about_us"
            android:textStyle="bold" />

        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/detailed_about_us"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginVertical="16dp"
            android:layout_marginHorizontal="16dp"
            android:text="@string/dummy"
            android:transitionName="campaign_description"/>
    </LinearLayout>

    <View android:layout_width="match_parent" android:layout_height="1dp" style="@style/Divider"/>

    <LinearLayout
        android:id="@+id/contentWedLoveContainer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        >
        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/header_contentWedLove"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="16dp"
            android:text="@string/header_contentWedLoveFromYou"
            android:textStyle="bold" />

        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/detailed_contentWedLoveFromYou"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:text="@string/dummy"
            android:layout_marginVertical="8dp"
            android:layout_marginEnd="16dp"
            app:layout_constraintTop_toBottomOf="@+id/header_contentWedLove" />
    </LinearLayout>

    <View android:layout_width="match_parent" android:layout_height="1dp" style="@style/Divider"/>

    <LinearLayout
        android:id="@+id/whereToFindProductContainer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        >

        <TextView
            android:id="@+id/header_whereToFindProduct"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="16dp"
            android:text="@string/header_whereToFindProduct"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/detailed_whereToFindProduct"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginVertical="16dp"
            android:layout_marginEnd="16dp"
            android:text="@string/dummy"
            />

    </LinearLayout>

    <View android:layout_width="match_parent" android:layout_height="1dp" style="@style/Divider"/>

    <LinearLayout
        android:id="@+id/callToActionContainer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        >
        <TextView
            android:id="@+id/header_callToAction"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="16dp"
            android:text="@string/header_callToAction"
            android:textStyle="bold"
            />

        <TextView
            android:id="@+id/detailed_callToAction"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginVertical="16dp"
            android:layout_marginEnd="16dp"
            android:text="@string/dummy"/>

    </LinearLayout>

    <View android:layout_width="match_parent" android:layout_height="1dp" style="@style/Divider"/>

    <LinearLayout
        android:id="@+id/campaignDosContainer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        >


        <TextView
            android:id="@+id/header_campaignDos"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="16dp"
            android:text="@string/header_campaignDos"
            android:textStyle="bold"/>

        <LinearLayout
            android:id="@+id/campaignDos"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginVertical="16dp"
            android:layout_marginEnd="8dp"
            android:background="@color/backgroundColor"
            android:orientation="vertical"
            />

    </LinearLayout>

    <View android:layout_width="match_parent" android:layout_height="1dp" style="@style/Divider"/>

    <LinearLayout
        android:id="@+id/campaignDontsContainer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="56dp"
        android:orientation="vertical"
        >

        <TextView
            android:id="@+id/header_campaignDonts"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="16dp"
            android:text="@string/header_campaignDonts"
            android:textStyle="bold"
            />

        <LinearLayout
            android:id="@+id/campaignDonts"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginVertical="16dp"
            android:layout_marginEnd="8dp"
            android:background="@color/backgroundColor"
            android:orientation="vertical"/>

        </LinearLayout>
    </LinearLayout>

